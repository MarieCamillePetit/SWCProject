{% extends 'base.html.twig' %}

{% block title %}Monster index{% endblock %}

{% block body %}
    <h1>Monster index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>MonsterName</th>
                <th>Stat_atk</th>
                <th>Stat_def</th>
                <th>Stat_hp</th>
                <th>Stat_atkspd</th>
                <th>Stat_critrate</th>
                <th>Stat_critdmg</th>
                <th>Stat_accuracy</th>
                <th>Stat_res</th>
                <th>Stat_prec</th>
                <th>Stat_evasion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for monster in monsters %}
            <tr>
                <td>{{ monster.id }}</td>
                <td>{{ monster.monsterName }}</td>
                <td>{{ monster.statAtk }}</td>
                <td>{{ monster.statDef }}</td>
                <td>{{ monster.statHp }}</td>
                <td>{{ monster.statAtkspd }}</td>
                <td>{{ monster.statCritrate }}</td>
                <td>{{ monster.statCritdmg }}</td>
                <td>{{ monster.statAccuracy }}</td>
                <td>{{ monster.statRes }}</td>
                <td>{{ monster.statPrec }}</td>
                <td>{{ monster.statEvasion }}</td>
                <td>
                    <a href="{{ path('app_monster_show', {'id': monster.id}) }}">show</a>
                    <a href="{{ path('app_monster_edit', {'id': monster.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_monster_new') }}">Create new</a>
{% endblock %}
